# =============================================================================
# RelevantAI - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your API keys
#
# IMPORTANT: Never commit your .env file to version control!
# =============================================================================

# =============================================================================
# REQUIRED: OpenAI API Key
# =============================================================================
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# REQUIRED: Pinecone API Key
# =============================================================================
# Get your key from: https://app.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here

# =============================================================================
# OPTIONAL: Pinecone Index Name
# =============================================================================
# Default: hn-articles
# Change this if you want to use a different index name
PINECONE_INDEX_NAME=hn-articles

# =============================================================================
# Django Settings (Optional)
# =============================================================================

# Django Secret Key (Optional - will use default in development)
# Generate a new one for production:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# DJANGO_SECRET_KEY=your-secret-key-here

# Debug Mode (Optional - default: True)
# Set to False in production
# DEBUG=True

# Allowed Hosts (Optional - comma separated)
# ALLOWED_HOSTS=localhost,127.0.0.1
